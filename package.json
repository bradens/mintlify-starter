{
  "name": "@codex/monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:dashboard": "turbo dev --filter=@codex/dashboard",
    "dev:docs": "turbo dev --filter=@codex/docs",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "check-all": "turbo check-all",
    "fix-all": "turbo fix-all",
    "clean": "turbo clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "@company-z/crypto-data": "37.1.8-beta-braden1",
    "@sentry/node": "7.120.3",
    "@sentry/serverless": "^7.120.3"
  },
  "overrides": {
    "faker": "npm:@faker-js/faker@^9.8.0"
  },
  "pnpm": {
    "overrides": {
      "faker": "npm:@faker-js/faker@^9.8.0"
    }
  }
}